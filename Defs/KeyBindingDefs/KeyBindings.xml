<?xml version="1.0" encoding="utf-8" ?>

<KeyBindingDefs>

  <!-- In-game camera -->
  
  <KeyBindingDef Name="GameMapKeyBinding" Abstract="true">
    <category>MD3Keys</category>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>BuildingOnOffToggle</defName>
    <label>toggle a building on/off</label>
    <defaultKeyCodeA>F</defaultKeyCodeA>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>CoalPowerToggleFuelConsume</defName>
    <label>toggle the coal power plant from consuming fuel</label>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>ExtendMechWall</defName>
    <label>extend machanical wall</label>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>RecessMechWall</defName>
    <label>recess machanical wall</label>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>ExtendMechEmbrasure</defName>
    <label>extend machanical embrasure</label>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>CrematoriusToggleStripBodies</defName>
    <label>crematorius strip bodies toggle</label>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>FillInFissure</defName>
    <label>fill fissure</label>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>DeepStorageEjectAll</defName>
    <label>deep storage eject all</label>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>DeactivateDroid</defName>
    <label>deactivate droid</label>
    <defaultKeyCodeA>X</defaultKeyCodeA>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>ExtractorChangeResource</defName>
    <label>extractor choose resource</label>
  </KeyBindingDef>

  <KeyBindingDef ParentName="GameMapKeyBinding">
    <defName>FissureGeneratorChangeFissure</defName>
    <label>fissure generator choose fissure</label>
  </KeyBindingDef>

</KeyBindingDefs>
