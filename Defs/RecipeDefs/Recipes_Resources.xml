<?xml version="1.0" encoding="utf-8"?>

<RecipeDefs>

  <RecipeDef>
    <defName>MD3MakeSilicon</defName>
    <label>make silicon</label>
    <description>Melts down sand to extract the silicon from it.</description>
    <jobString>Making silicon.</jobString>
    <workAmount>300</workAmount>
    <workSpeedStat>StonecuttingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MD3SandPile</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
    <products>
      <MD3Silicon>20</MD3Silicon>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MD3SandPile</li>
      </thingDefs>
    </fixedIngredientFilter>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

  <RecipeDef>
    <defName>MD3MakeSandPile</defName>
    <label>make sand pile</label>
    <description>Crushes a rock chunk into sand.</description>
    <jobString>Crushing stone.</jobString>
    <workAmount>500</workAmount>
    <workSpeedStat>StonecuttingSpeed</workSpeedStat>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <recipeUsers>
      <li>TableStonecutter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkSandstone</li>
            <li>ChunkGranite</li>
            <li>ChunkLimestone</li>
            <li>ChunkSlate</li>
            <li>ChunkMarble</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <MD3SandPile>100</MD3SandPile>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkSandstone</li>
        <li>ChunkGranite</li>
        <li>ChunkLimestone</li>
        <li>ChunkSlate</li>
        <li>ChunkMarble</li>
      </thingDefs>
    </fixedIngredientFilter>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

  <RecipeDef>
    <defName>MD3MakeCircuitry</defName>
    <label>make circuitry</label>
    <description>Assembles various circuitry.</description>
    <jobString>Soldering PCB's.</jobString>
    <workAmount>600</workAmount>
    <workSpeedStat>MD3SolderingSpeed</workSpeedStat>
    <effectWorking>Repair</effectWorking>
    <soundWorking>Interact_Repair</soundWorking>
    <recipeUsers>
      <li>TableMachining</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MD3Silicon</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
    <products>
      <MD3Circuitry>10</MD3Circuitry>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Silver</li>
        <li>MD3Silicon</li>
      </thingDefs>
    </fixedIngredientFilter>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

  <RecipeDef>
    <defName>MD3MakeCharcoal</defName>
    <label>make charcoal</label>
    <description>Makes charcoal by burning wood.</description>
    <jobString>Burning wood.</jobString>
    <workAmount>300</workAmount>
    <workSpeedStat>MD3SolderingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Interact_Repair</soundWorking>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <MD3Charcoal>10</MD3Charcoal>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
      </thingDefs>
    </fixedIngredientFilter>
    <workSkill>Crafting</workSkill>
  </RecipeDef>
  
 <RecipeDef>
    <defName>MD3MakeClayBricks</defName>
    <label>make clay bricks</label>
    <description>Makes clay bricks by baking soft clay.</description>
    <jobString>Baking clay.</jobString>
    <workAmount>300</workAmount>
    <workSpeedStat>MD3SolderingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Interact_Repair</soundWorking>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MD3SoftClay</li>
          </thingDefs>
        </filter>
        <count>60</count>
      </li>
    </ingredients>
    <products>
      <MD3ClayBrick>20</MD3ClayBrick>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MD3SoftClay</li>
      </thingDefs>
    </fixedIngredientFilter>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

</RecipeDefs>